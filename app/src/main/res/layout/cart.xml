<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="211dp"
        android:layout_height="33dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/cartItemsList"
        app:layout_constraintStart_toStartOf="@+id/cartItemsList"
        tools:text="Cart" />

    <TextView
        android:id="@+id/subtotal"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cartItemsList"
        tools:text="Subtotal" />

    <TextView
        android:id="@+id/tax"
        android:layout_width="91dp"
        android:layout_height="20dp"
        android:layout_marginEnd="4dp"
        android:text="TextView"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="@+id/subtotal"
        app:layout_constraintTop_toBottomOf="@+id/subtotal"
        tools:text="Tax" />

    <TextView
        android:id="@+id/total"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:fontFamily="sans-serif"
        android:text="TextView"
        android:textAlignment="viewEnd"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="@+id/tax"
        app:layout_constraintTop_toBottomOf="@+id/tax"
        tools:text="Total" />

    <TextView
        android:id="@+id/totalVal"
        android:layout_width="72dp"
        android:layout_height="29dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif"
        android:text="TextView"
        android:textAlignment="viewEnd"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBaseline_toBaselineOf="@+id/total"
        app:layout_constraintEnd_toEndOf="@+id/cartItemsList"
        tools:text="totalVal" />

    <Button
        android:id="@+id/continueShopping"
        style="@android:style/Widget.Material.Light.Button.Small"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/checkout"
        app:layout_constraintTop_toBottomOf="@+id/total"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Back to Menu" />

    <Button
        android:id="@+id/checkout"
        style="@android:style/Widget.Material.Light.Button.Small"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="Button"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/cartItemsList"
        tools:layout_editor_absoluteY="442dp"
        tools:text="Order Now" />

    <TextView
        android:id="@+id/subtotalVal"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textAlignment="textEnd"
        app:layout_constraintBaseline_toBaselineOf="@+id/subtotal"
        app:layout_constraintEnd_toEndOf="@+id/cartItemsList"
        tools:text="subValue" />

    <TextView
        android:id="@+id/taxVal"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textAlignment="textEnd"
        app:layout_constraintBaseline_toBaselineOf="@+id/tax"
        app:layout_constraintEnd_toEndOf="@+id/cartItemsList"
        tools:text="taxValue" />

    <ListView
        android:id="@+id/cartItemsList"
        android:layout_width="278dp"
        android:layout_height="249dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>